<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>
    
    <%- include("../partials/nav")  %> 

    <div class="container mt-3">
       <div class="row">
        <div class="col-md-12 mt-3">
            <% if (action != undefined && action == "edit") { %>
                <div class="alert alert-success">
                    Blog Güncellendi
                </div>
            <% } %>
            <% if (action != undefined && action == "create") { %>
                <div class="alert alert-success">
                    Blog Eklendi
                </div>
            <% } %>
            <% if (action != undefined && action == "delete") { %>
                <div class="alert alert-danger">
                    Blog Silindi
                </div>
            <% } %>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th style="width: 150px;">resim</th>
                        <th>başlık</th>
                        <th style="width: 130px"></th>
                    </tr>
                </thead>
                <tbody>
                    <% blogs.forEach(blog => { %>
                    <tr>
                        <td><img src="/static/images/<%=blog.resim  %>" class="img-fluid" alt=""></td>
                        <td><%= blog.baslik %></td>
                        <td>
                            <a class="btn btn-sm btn-primary" href="/admin/blog/<%= blog._id %>">Edit</a>
                            <a class="btn btn-sm btn-danger" href="/admin/blog/delete/<%= blog._id %>">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
       </div>
    </div>

</body>
</html>